<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userfragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mapLinear"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pink"
            android:padding="5dp">
            <ImageView
                android:id="@+id/IVBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/applogo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UMM...SEEK"
                android:layout_marginHorizontal="10dp"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:id="@+id/reset"
                android:background="@drawable/refresh_16px"
                android:backgroundTint="@color/rRed"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/button_round"
                android:id="@+id/userImgBtn1"
                android:layout_gravity="center"
                android:clickable="true"
                android:theme="@style/userImgBtn"
                android:layout_margin="15dp"
                android:src="@drawable/ic_baseline_account_circle_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listView_main_list1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#ECC5C0"></ListView>
    </LinearLayout>
</LinearLayout>