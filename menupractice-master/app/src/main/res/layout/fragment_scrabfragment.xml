<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".scrabfragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mapLinear"
        android:background="#FFF0F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/pink"
            android:padding="10dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/applogo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umm...SEEK"
                android:layout_marginHorizontal="10dp"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/titleEdit"
                    android:layout_width="185dp"
                    android:layout_height="50dp"
                    android:background="#FFF0F5"
                    android:gravity="center"
                    android:hint="맛집 이름"
                    android:textColorHint="@color/colorGray"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"></EditText>

                <RatingBar
                    android:id="@+id/reviewRating"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.2"
                    android:theme="@style/ratingColor"></RatingBar>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <EditText
                android:id="@+id/reviewEdit"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@null"
                android:gravity="center"
                android:hint="맛집 리뷰를 작성해주세요."
                android:textColorHint="@color/colorGray"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="5"
                android:scrollbars="vertical"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/reviewImageview"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:maxWidth="200dp"
                android:maxHeight="180dp"
                android:onClick="onClick"
                app:srcCompat="@drawable/ic_baseline_panorama_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/rRed"
                android:background="@drawable/button_round"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="취소"/>
            <Button
                android:id="@+id/okButton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/rRed"
                android:background="@drawable/button_round"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="확인"/>
        </LinearLayout>

        <Button
            android:id="@+id/reviewButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_round"
            android:backgroundTint="@color/rRed"
            android:gravity="center"
            android:text="리뷰 목록 확인하기" />
    </LinearLayout>
</LinearLayout>